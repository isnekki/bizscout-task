{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["./web/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
, "jest.config.js"  ],
  "exclude": [
    "node_modules"
  ]
}
